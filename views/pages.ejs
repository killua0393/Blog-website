  <style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
  
      /* Main container that holds sidebar and content */
      .main-container {
        display: flex;
        min-height: 100vh; /* Full height view */
      }
  
      /* Sidebar Styles */
      .sidebar {
        width: 20%; /* Sidebar takes 25% of the page width */
        background-color: #f0f0f0; /* Light gray background for the sidebar */
        padding: 0px;
      }
  
      /* Content Styles */
      .content {
        width: 80%; /* Content takes 75% of the page width */
        padding-left: 100px;
        padding-right: 100px;
        padding-top: 20px;
        

      }
      .container{
        display: flex;
        align-items: center;

      }
      /* Remove hover and focus background change */
.no-hover:hover,
.no-hover:focus,
.no-hover:active {
    background-color: #6c757d !important; /* Keep the default background */
    border: none !important;
    outline: none !important; /* Optional: Remove the focus outline */
}


